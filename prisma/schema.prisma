generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model profiles {
    id             String  @id @default(uuid())
    email          String  @unique
    firstName      String?
    lastName       String?
    supabaseUserId String  @unique
    organizationId String?

    organization organizations? @relation(fields: [organizationId], references: [id])
}

model organizations {
    id    String     @id @default(uuid())
    name  String
    users profiles[]
}
